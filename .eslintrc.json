{
  "plugins": [
    "spellcheck",
    "react"
  ],
  
  "rules": {
    "spellcheck/spell-checker": [1,
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "lang": "en_GB",
        "skipWords": [
          "utils",
          "calc",
          "calcd",
          "dto",
          "int",
          "ni",
          "dob",
          "color",
          
          //css class names
          "90vw",
          "95vw",
          "mt",
          "mx",
          "mr",
          "btn",
          "var"
        ],
        "minLength": 2
      }
    ]
  },

  "parser": "babel-eslint"
}